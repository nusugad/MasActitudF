@model IEnumerable<MasActitud.Models.Trabajador>

@{
    ViewData["Title"] = "Trabajador";
}

<div class="text-center">
    <h1 class="display-4">CRUD Trabajadores</h1>
</div>

<div class="row">
    <div class="col-12">
        <div class="card border">
            <div class="card-header">
                <h3><strong>Lista de trabajadores</strong></h3>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                @if (Model.Count() > 0)
                {
                    <table class="table table-bordered" id="tablaTrabajadores" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Tipo Identificación </th>
                                <th>Número</th>
                                <th>Primer Nombre</th>
                                <th>Segundo Nombre</th>
                                <th>Primer Apellido</th>
                                <th>Segundo Apellido</th>
                                <th>Fecha Nacimiento </th>
                                <th>Edad</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var trabajador in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(m => trabajador.tipoIdentificacion)</td>
                                    <td>@Html.DisplayFor(m => trabajador.numeroIdentificacion)</td>
                                    <td>@Html.DisplayFor(m => trabajador.primerNombre)</td>
                                    <td>@Html.DisplayFor(m => trabajador.segundoNombre)</td>
                                    <td>@Html.DisplayFor(m => trabajador.primerApellido)</td>
                                    <td>@Html.DisplayFor(m => trabajador.segundoApellido)</td>
                                    <td>@Html.DisplayFor(m => trabajador.fechaNacimiento)</td>
                                    <td>@Html.DisplayFor(m => trabajador.Edad)</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p>No hay registros</p>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script>
        $(document).ready(function () {
            $('#tablaTrabajadores').DataTable();
        });
    </script>
}
@model IEnumerable<MasActitud.Models.Contrato>

@{
    ViewData["Title"] = "Contrato";
}

<div class="text-center">
    <h1 class="display-4">CRUD Contratos</h1>
</div>

<div class="row">
    <div class="col-12">
        <div class="card border">
            <div class="card-header">
                <h3><strong>Lista de contratos</strong></h3>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                @if (Model.Count() > 0)
                {
                    <table class="table table-bordered" id="tablaContratos" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Nombre Entidad</th>
                                <th>Número Contrato</th>
                                <th>Número Identificación</th>
                                <th>Fecha Inicio</th>
                                <th>Fecha Fin</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var contrato in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(m => contrato.nombreEntidad)</td>
                                    <td>@Html.DisplayFor(m => contrato.numeroContrato)</td>
                                    <td>@Html.DisplayFor(m => contrato.numeroIdentificacion)</td>
                                    <td>@Html.DisplayFor(m => contrato.fechaInicio)</td>
                                    <td>@Html.DisplayFor(m => contrato.fechaFinalizacion)</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p>No hay registros</p>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script>
        $(document).ready(function () {
            $('#tablaContratos').DataTable();
        });
    </script>
}
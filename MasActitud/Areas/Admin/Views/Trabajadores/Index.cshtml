@model IEnumerable<MasActitud.Models.Trabajador>

@{
    ViewData["Title"] = "Trabajador";
}

<div class="text-center">
    <h1 class="display-4">CRUD Trabajadores</h1>
</div>

<div class="row">
    <div class="col-12">
        <div class="float-right">
            <a asp-action="Create" asp-controller="Trabajadores" class="btn btn-success">Nuevo trabajador</a>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card border">
            <div class="card-header">
                <h3><strong>Lista de trabajadores</strong></h3>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                @if (Model.Count() > 0)
                {
                    <table class="table table-bordered" id="tablaTrabajadores" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>@Html.DisplayNameFor(m => m.tipoIdentificacion)</th>
                                <th>@Html.DisplayNameFor(m => m.numeroIdentificacion)</th>
                                <th>@Html.DisplayNameFor(m => m.primerNombre)</th>
                                <th>@Html.DisplayNameFor(m => m.segundoNombre)</th>
                                <th>@Html.DisplayNameFor(m => m.primerApellido)</th>
                                <th>@Html.DisplayNameFor(m => m.segundoApellido)</th>
                                <th>@Html.DisplayNameFor(m => m.fechaNacimiento)</th>
                                <th>@Html.DisplayNameFor(m => m.Edad)</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var trabajador in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(m => trabajador.tipoIdentificacion)</td>
                                    <td>@Html.DisplayFor(m => trabajador.numeroIdentificacion)</td>
                                    <td>@Html.DisplayFor(m => trabajador.primerNombre)</td>
                                    <td>@Html.DisplayFor(m => trabajador.segundoNombre)</td>
                                    <td>@Html.DisplayFor(m => trabajador.primerApellido)</td>
                                    <td>@Html.DisplayFor(m => trabajador.segundoApellido)</td>
                                    <td>@Html.DisplayFor(m => trabajador.fechaNacimiento)</td>
                                    <td>@Html.DisplayFor(m => trabajador.Edad)</td>
                                    <td>
                                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@trabajador.numeroIdentificacion">Editar</a>
                                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@trabajador.numeroIdentificacion">Eliminar</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p>No hay registros</p>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script>
        $(document).ready(function () {
            $('#tablaTrabajadores').DataTable();
        });
    </script>
}